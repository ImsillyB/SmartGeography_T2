<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    <RelativeLayout 
		android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        >
	<TextView
	        android:id="@+id/ImglevelsTextView"
	        android:layout_width="100dp"
	        android:layout_height="32dp"
	        android:singleLine="true"
	        android:gravity="center"
	        android:text="压缩质量40"
	        android:textSize="18dp"
	        android:textColor="#000000"
	        />
	<SeekBar 
	        android:id="@+id/ImglevelsSeekBar"
	        android:layout_toRightOf="@id/ImglevelsTextView"
	        android:layout_alignTop="@id/ImglevelsTextView"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:max="99"
	        android:progress="40"
	        />

    </RelativeLayout>
    
    <RelativeLayout 
		android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        >
        <TextView
            android:id="@+id/SamplesetTextView"
	        android:layout_width="150dp"
	        android:layout_height="32dp"
	        android:singleLine="true"
	        android:gravity="center"
	        android:text="样方"
	        android:textSize="18dp"
	        android:textColor="#000000"
	        />
	     <EditText 
	        android:id="@+id/SampleEditText"
	        android:layout_toRightOf="@id/SamplesetTextView"
	        android:layout_alignTop="@id/SamplesetTextView"
	        android:layout_height="wrap_content"  
	        android:layout_width="fill_parent" 
	        android:layout_marginLeft="10dip"  
	        android:layout_marginRight="10dip"
	        android:background="@drawable/red_transparency_shape"
	        /> 
	</RelativeLayout>
	
    <RelativeLayout 
		android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        >
        <TextView
            android:id="@+id/GTextView"
	        android:layout_width="150dp"
	        android:layout_height="32dp"
	        android:singleLine="true"
	        android:gravity="center"
	        android:text="叶面积投影比(G)"
	        android:textSize="18dp"
	        android:textColor="#000000"
	        />
	     <EditText 
	        android:id="@+id/GEditText"
	        android:layout_toRightOf="@id/GTextView"
	        android:layout_alignTop="@id/GTextView"
	        android:layout_height="wrap_content"  
	        android:layout_width="fill_parent" 
	        android:hint="默认0.5"
	        android:inputType="numberDecimal"
	        android:layout_marginLeft="10dip"  
	        android:layout_marginRight="10dip"
	        android:background="@drawable/red_transparency_shape"
	        /> 
	</RelativeLayout>
	
    <RelativeLayout 
		android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        >
        <TextView
            android:id="@+id/CostTextView"
	        android:layout_width="150dp"
	        android:layout_height="32dp"
	        android:singleLine="true"
	        android:gravity="center"
	        android:text="数据积分值"
	        android:textSize="18dp"
	        android:textColor="#000000"
	        />
	     <EditText 
	        android:id="@+id/CostEditText"
	        android:layout_toRightOf="@id/CostTextView"
	        android:layout_alignTop="@id/CostTextView"
	        android:layout_height="wrap_content"  
	        android:layout_width="fill_parent" 
	         android:hint="默认不公开"
	        android:inputType="number"
	        android:layout_marginLeft="10dip"  
	        android:layout_marginRight="10dip"
	        android:background="@drawable/red_transparency_shape"
	        /> 
	</RelativeLayout>
    
    <RadioGroup
	    android:id="@+id/radioGrop"
	    android:contentDescription="拍摄角度"
	    android:orientation="horizontal"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content">
	    <RadioButton
	        android:id="@+id/SaturabilityRadio"
	        android:text="饱和度"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:textSize="12dp"
	        android:checked="false"
         ></RadioButton>
	    <RadioButton
	        android:id="@+id/BlueRadio"
	        android:text="蓝色波段"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:textSize="12dp"
	        android:checked="false"
         ></RadioButton>
	    <RadioButton
	        android:id="@+id/IntensityRadio"
	        android:text="亮度值"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:textSize="12dp"
	        android:checked="false"
         ></RadioButton>
	    <RadioButton
	        android:id="@+id/GreenRadio"
	        android:text="绿度指数"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:textSize="12dp"
	        android:checked="true"
         ></RadioButton>
	
	</RadioGroup>
	
    
     

</LinearLayout>
